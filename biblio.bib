@Article{Anenberg2014,
  author          = {Anenberg, Eitan and Arstikaitis, Pamela and Niitsu, Yoichi and Harrison, Thomas C and Boyd, Jamie D and Hilton, Brett J and Tetzlaff, Wolfram and Murphy, Timothy H},
  journal         = {The Journal of neuroscience : the official journal of the Society for Neuroscience},
