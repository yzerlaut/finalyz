@Article{Uchizawa2006,
  author          = {Uchizawa, Kei and Douglas, Rodney and Maass, Wolfgang},
  title           = {On the computational power of threshold circuits with sparse activity.},
  journal         = {Neural computation},
  year            = {2006},
  volume          = {18},
