  completed       = {2018-03-26},
  country         = {United States},
  doi             = {10.1152/jn.00096.2017},
  file            = {:Larimer2017 - Development and Long Term Integration of MGE Lineage Cortical Interneurons in the Heterochronic Environment..PDF:PDF},
