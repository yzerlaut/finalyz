@Article{Ferrari2020,
  author          = {Ferrari, Ulisse and Deny, Stéphane and Sengupta, Abhishek and Caplette, Romain and Trapani, Francesco and Sahel, José-Alain and Dalkara, Deniz and Picaud, Serge and Duebel, Jens and Marre, Olivier},
