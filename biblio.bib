  issn-linking    = {0022-3077},
  issue           = {1},
  keywords        = {Action Potentials, physiology; Animals; Electric Fish; Electric Organ, innervation, physiology; Electric Stimulation; Electrophysiology; Models, Neurological; Neurons, Afferent, physiology},
  nlm-id          = {0375404},
