  country      = {Switzerland},
  doi          = {10.3389/fncom.2011.00045},
  issn-linking = {1662-5188},
  keywords     = {oscillations; phase-locking; place fields; spike-timing dependent plasticity; stability of neuronal plasticity; stable learning},
  nlm-id       = {101477956},
  owner        = {NLM},
  pmc          = {PMC3216007},
  pmid         = {22110429},
  pubmodel     = {Electronic-eCollection},
  pubstate     = {epublish},
  revised      = {2018-11-13},
}

